
<div class="container">
   <div class="row">

      <div class="col-lg-8">
        <div class="card">
          <h1><%= @flat.name %></h1>
          <%= image_tag "https://picsum.photos/200/300", class: "img-fluid" %>
          <p><%= @flat.description %></p>
          <p><%= @flat.price_per_night %> <%= @flat.number_of_guests %></p>
        </div>
      </div>

</div>

<%= link_to "Edit #{@flat.name}", edit_flat_path(@flat) %>
<br>
<%= link_to "Delete #{@flat.name}", flat_path(@flat), method: :delete, data: { confirm: "Are your sure?"} %>
<br>
<%= link_to "Back to all flats", flats_path %>
